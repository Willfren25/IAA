---
import '@styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = 'Generador de Workflows n8n con IA - Transforma lenguaje natural en automatizaciones' 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <title>{title} | IAA</title>
  </head>
  <body class="min-h-screen">
    <!-- Header -->
    <header class="fixed top-0 left-0 right-0 z-50 bg-n8n-dark/80 backdrop-blur-lg border-b border-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <!-- Logo -->
          <a href="/" class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-n8n-primary to-n8n-accent flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <span class="text-xl font-bold">
              <span class="gradient-text">IAA</span>
            </span>
          </a>
          
          <!-- Nav -->
          <nav class="hidden md:flex items-center gap-6">
            <a href="/" class="text-gray-300 hover:text-white transition-colors">Dashboard</a>
            <a href="/templates" class="text-gray-300 hover:text-white transition-colors">Templates</a>
            <a href="/docs" class="text-gray-300 hover:text-white transition-colors">Documentación</a>
          </nav>
          
          <!-- Actions -->
          <div class="flex items-center gap-4">
            <a href="https://github.com/Willfren25/IAA" target="_blank" rel="noopener noreferrer" 
               class="text-gray-400 hover:text-white transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </header>
    
    <!-- Main Content -->
    <main class="pt-16 min-h-screen">
      <slot />
    </main>
    
    <!-- Footer -->
    <footer class="bg-n8n-secondary border-t border-gray-800 py-8 mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4">
          <p class="text-gray-500 text-sm">
            © 2024 IAA - Generador de Workflows n8n con IA
          </p>
          <div class="flex items-center gap-6 text-sm text-gray-500">
            <a href="/docs" class="hover:text-gray-300 transition-colors">Docs</a>
            <a href="https://github.com/Willfren25/IAA" class="hover:text-gray-300 transition-colors">GitHub</a>
            <a href="https://n8n.io" target="_blank" rel="noopener noreferrer" class="hover:text-gray-300 transition-colors">n8n</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
